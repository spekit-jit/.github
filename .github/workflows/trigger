name: Trigger Build & Deploy Pages
on:
  schedule:
    - cron: '0 0 * * *'
  workflow_dispatch:
jobs:
  trigger:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Workflow
        env:
          GH_TOKEN: ${{ secrets.PAT }}
        run: |
          gh workflow run build-deploy-pages.yml --repo spekit-jit.github.io/github --ref main
